<div class="container">
    <div class="card shadow-lg mt-4 mx-auto p-4" style="width: 100%;">

        <div class="card-header mb-4 bg-primary text-white text-center">
            <h2 class="mb-0 p-2">User Management</h2>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary w-75 border border-secondary mt-3 mb-2">
                <i class="bi bi-person-plus-fill"></i> Add New User
            </a>
        </div>

        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped mb-3">
                <thead class="text-center">
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/usersIndex.js"></script>
}
