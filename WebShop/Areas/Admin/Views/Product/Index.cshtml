
@model Models.ViewModels.ProductVM

<div class="container">
    <div class="card shadow-lg mt-4 mx-auto p-4" style="width: 100%;">

        <div class="card-header mb-4 bg-primary text-white">
            <h2 class="mb-0 text-center p-2">Product Management</h2>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <a asp-controller="Product" asp-action="upsert" class="btn btn-primary w-75 border border-secondary mt-3 mb-2">
                <i class="bi bi-plus-circle"></i> Create new Product
            </a>
        </div>

        <div class="container border border-primary rounded p-3">
            <form method="get" class="form-group mb-3">
                <label for="categoryFilter" class="control-label p-2">Category</label>
                <select id="categoryFilter" asp-items="Model.CategoryListItems" class="form-control">
                    <option selected value="0">All</option>
                </select>
                <label for="productOptions" class="control-label p-2">Product filter Options</label>
                <select id="productOptions" class="form-select">
                    <option value="@Utility.Constants.ProductListFilteringOptions.All" selected>All</option>
                    <option value="@Utility.Constants.ProductListFilteringOptions.OnlyDiscounted">Discounted</option>
                    <option value="@Utility.Constants.ProductListFilteringOptions.OnlyWithActiveDiscount">Only with active discount</option>
                </select>
            </form>

            <div class="table-responsive">
                <table id="tblData" class="table table-bordered table-striped mb-3">
                    <thead class="text-center">
                        <tr>
                            <th>Name</th>
                            <th>Category Name</th>
                            <th>Has Discount?</th>
                            <th>Active Discount?</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


    @section Scripts {
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="module" src="~/js/productIndex.js"></script>
    }
