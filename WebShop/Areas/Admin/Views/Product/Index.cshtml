@model Models.ViewModels.ProductVM


<ul>
    @foreach (var product in Model.Products)
    {
        <li>@product.Name</li>
    }
</ul>

<div class="container border border-primary rounded p-3">
    <div class="form-group mb-3">
        <label class="control-label p-2">Category</label>
        <select id="categoryFilter" asp-items="Model.CategoryListItems" class="form-control">
            <option selected value="all">All</option>
        </select>
    </div>


    <div class="table-responsive">
        <table id="tblData" class="table table-bordered table-striped mb-3">
            <thead class="text-center">
                <tr>
                    <th>Name</th>
                    <th>Category Name</th>
                    <th>Has Discount?</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="d-flex justify-content-center mb-3">
    <a asp-controller="Product" asp-action="upsert" class="btn btn-primary w-75 border border-secondary mt-3 mb-2">
        <i class="bi bi-plus-circle"></i> Create new Product
    </a>
</div>

@section Scripts {
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="module" src="~/js/DiscountUpdater.js"></script>
    <script type="module" src="~/js/productIndex.js"></script>
}